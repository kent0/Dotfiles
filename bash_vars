PS1="[\h \W]\\$ "

TERM="xterm-256color-italic"

EDITOR="vi"

HISTCONTROL="erasedups:ignoreboth"
HISTSIZE=100

export XZ_OPT=-9

export QSTAT_HEADER="JobID:JobName:WallTime:RunTime:Nodes"
export OCCA_DIR="$HOME/Developer/occa"
export NB_ROOT="$HOME/Developer/NekBone"
export LD_LIBRARY_PATH="$OCCA_DIR/lib"

case `uname` in
Darwin)
    FONTCONFIG_PATH=/opt/X11/lib/X11/fontconfig
    FIGNORE=DS_Store

    export HOMEBREW_NO_EMOJI=1
#   export HOMEBREW_CC=gcc-6
#   export HOMEBREW_CXX=g++-6
    ;;
Linux)
    case `uname -n` in
    donquixote*)
        ;;
    rocinante*)
        ;;
    nek5k-wks*)
        ;;
    h2ologin* | nid*) # Blue Waters
        export GIT_PAGER="cat"
        ;;
    tesla)
        PS1="[\h \w]\\$ "
        ;;
    jls*)
        export QSTAT_HEADER="JobID:JobName:WallTime:RunTime:Location"
        ;;
    *)
        TERM="xterm-256color"
        ;;
    esac
    ;;
esac
