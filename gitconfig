[credential]
	helper = cache --timeout=604800
[user]
	name = Kento Kaneko
	email = kaneko@mit.edu
[push]
	default = current
[alias]
	a   = add
	ap  = add -p
	ua  = restore --staged

	c  = commit -m
	ca = commit -am

	cl  = clone

	d   = diff --color-words
	dt  = difftool
	ds  = diff --color-words --staged

	co  = checkout
	cob = checkout -b
    cp  = cherry-pick

	b   = branch

	f   = fetch --all

	p   = push
	pa  = push --all
	pt  = push --tags
	pd  = push --delete

	rs  = reset --soft
	rs1 = reset --soft HEAD~1

	u   = pull

	l   = log -3
	l1  = log -1
	l2  = log -2
	l4  = log -4
	l5  = log -5

	r   = remote
	rv  = remote -v

	s   = status
	ss  = status -s

	st  = stash
	sta = stash apply

	t   = tag
	ta  = tag -a

	rb  = rebase --interactive
[color]
	branch = auto
	diff = always
	status = auto
	pull = auto
	push = auto
[diff]
	tool = bbdiff
	wordDiff = color
[difftool "bbdiff"]
	cmd = bbdiff --wait --resume \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[log]
	abbrevcommit = yes
[core]
	abbrev = 8
[init]
	defaultBranch = master
