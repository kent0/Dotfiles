[
  // Vim settings
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      "shift-s": "workspace::Save",
      //    "enter": "editor::GoToDefinition",
      "down": "editor::GoToDiagnostic",
      "up": "editor::GoToPrevDiagnostic",
      "_": [
        "task::Spawn",
        {
          "task_name": "make"
        }
      ],
      "\\": [
        "task::Spawn",
        {
          "task_name": "make"
        }
      ],
      "space": "command_palette::Toggle"
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      "shift-s": [
        "vim::PushOperator",
        {
          "AddSurrounds": {}
        }
      ]
    }
  },
  {
    "context": "!Editor || (Editor && vim_mode == normal && !VimWaiting && !menu)",
    "bindings": {
      "shift shift": "command_palette::Toggle"
    }
  },
  {
    "context": "Workspace || Editor",
    "bindings": {
      "alt-f": "workspace::NewSearch",
      "alt-l": "editor::SelectAllMatches",
      "alt-r": "editor::Rename",
      "alt-m": [
        "task::Spawn",
        {
          "task_name": "make"
        }
      ],
      "alt-v": [
        "task::Spawn",
        {
          "task_name": "vi"
        }
      ]
    }
  },
  {
    "context": "Pane || Editor",
    "bindings": {
      "insert": "pane::ActivatePrevItem",
      "delete": "pane::ActivateNextItem"
    }
  },
  {
    "bindings": {
      "cmd-n": "workspace::NewWindow"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "cmd-t": "workspace::NewTerminal"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "cmd-t": "workspace::NewFile"
    }
  },
  {
    "context": "BufferSearchBar && !in_replace",
    "bindings": {
      "enter": "buffer_search::Dismiss",
      "escape": "editor::Cancel"
    }
  }
]
