// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "features": {
    "edit_prediction_provider": "zed"
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "tabs": {
    "close_position": "left"
  },
  "scrollbar": {
    "git_diff": false
  },
  "soft_wrap": "editor_width",
  "terminal": {
    "dock": "right",
    "font_weight": 350,
    "line_height": { "custom": 1.28 }
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "theme": {
    "mode": "system",
    "light": "Xcode Bare",
    "dark": "Xcode KK"
  },
  "experimental.theme_overrides": {
    // "search.match_background": "#960",
    "terminal.foreground": "#FFFFFF",
    "terminal.background": "#1e1e1e",
    "editor.foreground": "#fff", 
    "editor.background": "#1e1e1e",
    "editor.active_line.background": "#333",
    "editor.highlighted_line.background": "#FFD485",
    "editor.gutter.background":  "#1e1e1e",
    "border": "#444",
    "predictive": "#AAAAAA",
    "players": [
      {
        "cursor": "#B260ec",
        "background": "#FFFFFF",
        "selection": "#FEBC2E"
      }
    ],
    "syntax": {
      "boolean": {
        "color": "#fff"
      },
      "comment": {
        "color": "#8a8a8a",
        "font_style": "italic"
      },
      "constant": {
        "color": "#fff"
      },
      "embedded": {
        "color": "#fff"
      },
      "enum": {
        "color": "#fff"
      },
      "function": {
        "color": "#fff"
      },
      "function.builtin": {
        "color": "#fff"
      },
      "function.definition": {
        "color": "#fff"
      },
      "function.method": {
        "color": "#fff"
      },
      "function.method.builtin": {
        "color": "#fff"
      },
      "function.special": {
        "color": "#fff"
      },
      "hint": {
        "color": "#fff"
      },
      "keyword": {
        "color": "#fff"
      },
      "label": {
        "color": "#fff"
      },
      "number": {
        "color": "#fff"
      },
      "operator": {
        "color": "#fff"
      },
      "predictive": {
        "color": "#fff"
      },
      "preproc": {
        "color": "#fff"
      },
      "primary": {
        "color": "#fff"
      },
      "tag": {
        "color": "#fff"
      },
      "string": {
        "color": "#fff"
      },
      "type": {
        "color": "#fff"
      },
      "type.builtin": {
        "color": "#fff"
      },
      "type.super": {
        "color": "#fff"
      },
      "variable": {
        "color": "#fff"
      },
      "variable.special": {
        "color": "#fff"
      },
      "property": {
        "color": "#fff"
      },
      "constructor": {
        "color": "#fff"
      },
      "attribute": {
        "color": "#fff"
      }
    }
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "never"
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "ui_font_size": 13,
  "ui_font_family__": "SF Pro",
  "ui_font_family": "SF Compact Text",
  "ui_font_family_": "Helvetica Neue",
  "buffer_font_size": 12,
  "buffer_font_family_": "iA Writer Mono S",
  "buffer_font_family": "Operator Mono",
  "buffer_font_weight": 350,
  "buffer_line_height": { "custom": 1.28 },
  "extend_comment_on_newline": false,
  "cursor_blink": false,
  "ensure_final_newline_on_save": true,
  "preferred_line_length": 80,
  "remove_trailing_whitespace_on_save": true,
  "languages": {
    "python": {},
    "LaTeX": {}
  },
  "indent_guides": {
    /// Whether to show indent guides in the editor.
    "enabled": true,
    /// The width of the indent guides in pixels, between 1 and 10.
    "line_width": 1,
    /// The width of the active indent guide in pixels, between 1 and 10.
    "active_line_width": 1,
    /// Determines how indent guides are colored.
    /// This setting can take the following three values:
    ///
    /// 1. "disabled"
    /// 2. "fixed"
    /// 3. "indent_aware"
    "coloring": "fixed",
    /// Determines how indent guide backgrounds are colored.
    /// This setting can take the following two values:
    ///
    /// 1. "disabled"
    /// 2. "indent_aware"
    "background_coloring": "disabled"
  },
  "autosave": { "after_delay": { "milliseconds": 500 } },
  // "autosave": "off",
  "auto_update": false,
  "git": {
    // Control whether the git gutter is shown. May take 2 values:
    // 1. Show the gutter
    //      "git_gutter": "tracked_files"
    // 2. Hide the gutter
    //      "git_gutter": "hide"
    "git_gutter": "tracked_files",
    // Control whether the git blame information is shown inline,
    // in the currently focused line.
    "inline_blame": {
      "enabled": false
      // Sets a delay after which the inline blame information is shown.
      // Delay is restarted with every cursor movement.
      // "delay_ms": 600
    }
  },
  "use_smartcase_search": true,
  "ssh_connections": [
    {
      "host": "selene",
      "projects": []
    },
    {
      "host": "alpha",
      "projects": [
        {
          "paths": [
            "~/Axl"
          ]
        }
      ]
    },
    {
      "host": "selene",
      "projects": [
        {
          "paths": [
            "~/Developer"
          ]
        }
      ]
    }
  ]
}
